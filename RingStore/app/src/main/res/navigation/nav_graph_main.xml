<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph_main"
    app:startDestination="@id/ringListFragment">

    <!--Профиль-->
    <fragment android:id="@+id/userInfoFragment"
        android:name="ru.mirea.gracheva.ringstore.presentation.UserInfoFragment">
        <action android:id="@+id/action_userInfoFragment_to_ringListFragment"
            app:destination="@id/ringListFragment"
            app:popUpTo="@id/userInfoFragment"
            app:popUpToInclusive="true"/>
        <action android:id="@+id/action_userInfoFragment_to_authFragment"
            app:destination="@+id/authFragment"/>
        <action android:id="@+id/action_userInfoFragment_to_editProfileFragment"
            app:destination="@+id/editProfileFragment"/>
    </fragment>
    <!--Цены на металлы-->
    <fragment android:id="@+id/metalPriceFragment"
        android:name="ru.mirea.gracheva.ringstore.presentation.MetalPriceFragment">
    </fragment>
    <!--Каталог колец-->
    <fragment android:id="@+id/ringListFragment"
        android:name="ru.mirea.gracheva.ringstore.presentation.RingListFragment">
        <action android:id="@+id/action_ringListFragment_to_ringDetailFragment"
            app:destination="@+id/ringDetailFragment"/>
    </fragment>
    <!--Страница с деталями о кольце-->
    <fragment android:id="@+id/ringDetailFragment"
        android:name="ru.mirea.gracheva.ringstore.presentation.RingDetailFragment">
        <action android:id="@+id/action_ringDetailFragment_to_userInfoFragment"
            app:destination="@+id/userInfoFragment"/>
    </fragment>
    <!--Избранное-->
    <fragment android:id="@+id/favoritesFragment"
        android:name="ru.mirea.gracheva.ringstore.presentation.FavoritesFragment">
        <action android:id="@+id/action_favoritesFragment_to_authFragment"
            app:destination="@+id/authFragment"/>
    </fragment>
    <!--Авторизация-->
    <fragment android:id="@+id/authFragment"
        android:name="ru.mirea.gracheva.ringstore.presentation.AuthFragment">
        <action android:id="@+id/action_authFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action android:id="@+id/action_authFragment_to_userInfoFragment"
            app:destination="@id/userInfoFragment"
            app:popUpTo="@id/userInfoFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <!--Регистрация-->
    <fragment android:id="@+id/registerFragment"
        android:name="ru.mirea.gracheva.ringstore.presentation.RegisterFragment">
        <action android:id="@+id/action_registerFragment_to_authFragment"
            app:destination="@id/authFragment" />
    </fragment>
    <!--Редактирование-->
    <fragment android:id="@+id/editProfileFragment"
        android:name="ru.mirea.gracheva.ringstore.presentation.EditProfileFragment">
        <action android:id="@+id/action_editProfileFragment_to_userInfoFragment"
            app:destination="@id/userInfoFragment" />
    </fragment>
</navigation>
